			"try {",
			"\t// 更新数据",
			"\t$$deal = $$this->model->save($$params, ['id'=> $$id]);",
			"\tDb::commit();",
			"} catch (Exception $$e) {",
			"\tDb::rollback();",
			"\t$$this->error($$e->getMessage());",
			"}",
			"",
			"if ($$deal == false) {",
			"\t$$this->error(__('Operation failed'));",
			"} else {",
			"\t$$this->success(__('Operation completed'), $$id);",
