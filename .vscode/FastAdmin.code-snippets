	// 获取ID 默认参数错误
	"获取ID": {
		"prefix": "getid",
		"body": [
			"$${1:id} = $$this->request->request('${1:id}/d', 0, 'intval');",
			"if($${1:id} == 0){",
			"\t$$this->error(__('Parameter error'));",
			"}",
		],
		"description": "获取ID判断是否为0"
	},

	// 获取参数快捷
	"request获取整形": {
		"prefix": "request_int",
		"body": [
			"$$this->request->request('${1:id}/d', 0, 'intval');",
		],
		"description": "接收整形"
	},
	"request获取字符串": {
		"prefix": "request_str",
		"body": [
			"$$this->request->request('${1:content}/s', '', 'trim');",
		],
		"description": "接收字符串"
	},
	"request获取数组": {
		"prefix": "request_arr",
		"body": [
